# Local PostgreSQL and auth (required for local/offline app)
# Copy to .env.local and fill in, or run: node scripts/generate-env.js

# Database: PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Create the database first: createdb zet_asociatie
LOCAL_DB_URL=postgresql://postgres:YOUR_POSTGRES_PASSWORD@localhost:5432/zet_asociatie

# JWT signing secret (min 32 chars). Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-min-32-characters-long

# Salt for app-level encryption key derivation (min 16 chars)
ENCRYPTION_SALT=your-encryption-salt-min-16-chars
